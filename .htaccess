RewriteEngine On

# Enable CORS for all requests
Header always set Access-Control-Allow-Origin "*"
Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
Header always set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"

# Handle preflight OPTIONS requests
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ $1 [R=200,L]

# API Routes
RewriteCond %{REQUEST_URI} ^/api/auth/(.*)$
RewriteRule ^api/auth/(.*)$ api/auth.php/$1 [QSA,L]

RewriteCond %{REQUEST_URI} ^/api/reservations/(.*)$
RewriteRule ^api/reservations/(.*)$ api/reservations.php/$1 [QSA,L]

RewriteCond %{REQUEST_URI} ^/api/sms/(.*)$
RewriteRule ^api/sms/(.*)$ api/sms.php/$1 [QSA,L]

# Catch all API routes
RewriteCond %{REQUEST_URI} ^/api/(.*)$
RewriteRule ^api/(.*)$ api/$1 [QSA,L]

# Static files (CSS, JS, images)
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^.*$ - [L]

# Everything else goes to index.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^.*$ index.php [L]

# Security headers
Header always set X-Frame-Options "SAMEORIGIN"
Header always set X-Content-Type-Options "nosniff"
Header always set X-XSS-Protection "1; mode=block"
Header always set Referrer-Policy "strict-origin-when-cross-origin"

# Disable directory browsing
Options -Indexes

# Protect sensitive files
<Files ~ "\.(env|sql|log|txt)$">
    Order allow,deny
    Deny from all
</Files>

# PHP settings
php_value memory_limit 256M
php_value upload_max_filesize 10M
php_value post_max_size 10M
php_value max_execution_time 300