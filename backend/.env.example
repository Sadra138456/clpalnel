# App Settings
PROJECT_NAME=Parsian Veterinary Clinic
VERSION=1.0.0
API_V1_STR=/api/v1

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production-make-it-long-and-random
ACCESS_TOKEN_EXPIRE_MINUTES=10080
ALGORITHM=HS256

# Database
POSTGRES_SERVER=db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-strong-password
POSTGRES_DB=parsian_clinic
POSTGRES_PORT=5432

# Redis
REDIS_URL=redis://redis:6379

# SMS Settings (Kavenegar)
SMS_API_KEY=your-kavenegar-api-key
SMS_API_URL=https://api.kavenegar.com/v1
SMS_SENDER=10004346

# Email Settings (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=

# File Upload
UPLOAD_FOLDER=uploads
MAX_FILE_SIZE=5242880
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8080","https://yourdomain.com"]